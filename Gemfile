source :rubygems

gem 'sinatra'

gem 'sprockets'

# enables scss usage
gem 'sass'

# sentence generator
gem 'marky_markov', github: 'Mart00cha/marky_markov'

# running the application
gem 'unicorn'

# debugging
gem "pry"

group :development do


  # automatic deployment to server
  gem "capistrano", "~> 3.3"
  gem "capistrano-rbenv"
  gem "capistrano-bundler"
  gem "capistrano3-unicorn"
end
